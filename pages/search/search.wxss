/* pages/search/search.wxss */
.search-page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.search-level {
  height: 100rpx;
  display: flex;
  justify-content: center ;
  align-items: center;
}

.search-box {
  height: 80rpx;
  width: 96%;
  display: flex;
  justify-content: space-between;
}

.van-search {
  flex: 1;
}

.van-search .van-search__content {
  border-radius: 17px;
}

.search-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.search-empty, .search-history {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-empty {
  justify-content: center;
}

.search-history {
  justify-content: top;
}

.search-empty .big-txt {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
}

.search-empty .txt {
  font-size: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #d4d4d4;
  padding-bottom: 260rpx;
}

.search-block {
  padding: 20rpx 40rpx;
  width: 90%;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.search-block .tit {
  padding-top: 10rpx;
  margin-bottom: 30rpx;
}

.search-block .search-block {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tip {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 1px solid #ccc;
  margin-right: 20rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  color: #999;
}