/* pages/principalDetails/principalDetails.wxss */
.page {
  position: relative;
  width: 100%;
}

.top-img {
  width: 100%;
}

.mc {
  position: absolute;
  z-index: 1;
  height: 100rpx;
  width: 100%;
  top: 140rpx;
  left: 0;
  background: linear-gradient(rgb(0, 0, 0, 0) 0, rgba(0, 0, 0, 0.8) 100%);
}

.info {
  width: 340rpx;
  display: flex;
  height: 60rpx;
  position: absolute;
  z-index: 3;
  top: 140rpx;
  right: 100rpx;
  justify-content: space-between;
  align-items: center;
}

.info-txt {
  font-size: 30rpx;
  color: #fff;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 180rpx;
  position: absolute;
  top: 110rpx;
  left: 50rpx;
  border: 6rpx #fff solid;
  z-index: 8;
}

.main {
  position: absolute;
  z-index: 6;
  top: 200rpx;
  left: 0;
  right: 0;
  padding: 120rpx 40rpx 40rpx;
  box-sizing: border-box;
  height: 400rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
}

.lecturer-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 42rpx;
  font-weight: bold;
}